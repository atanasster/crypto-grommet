{
  "name": "crypto-grommet",
  "version": "0.2.0",
  "description": "Crypto browser",
  "main": "src/index.js",
  "homepage": "https://crypto-grommet.herokuapp.com",
  "bugs": "https://github.com/atanasster/crypto-grommet/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/atanasster/crypto-grommet.git"
  },
  "engines": {
    "node": "9.x"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development grommet pack",
    "heroku-postbuild": "cross-env NODE_ENV=production grommet pack",
    "check": "cross-env NODE_ENV=test grommet check",
    "server": "node dist/dev.js",
    "start-server": "cross-env NODE_ENV=development $NODE_DEBUG_OPTION node ./public/dev.js",
    "test": "grommet check -t",
    "test-update": "grommet check -t -- --updateSnapshot",
    "test-watch": "grommet check -t -- --watchAll"
  },
  "dependencies": {
    "babel-loader": "^7.1.1",
    "babel-plugin-grommet": "^0.5.0",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "ccxt": "^1.10.981",
    "compression": "^1.7.1",
    "copy-webpack-plugin": "^4.0.1",
    "cors": "^2.7.1",
    "cross-env": "^5.1.3",
    "express": "^4.16.2",
    "grommet": "https://github.com/grommet/grommet/tarball/NEXT-stable",
    "grommet-cli": "^5.1.2",
    "grommet-icons": "^0.15.0",
    "history": "^4.7.2",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "node-fetch": "^2.0.0",
    "numeral": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-formify": "^0.1.0",
    "react-highcharts": "^16.0.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "^4.0.8",
    "react-twitter-widgets": "^1.7.1",
    "react-world-flags": "0.0.3",
    "redux": "^3.7.2",
    "redux-api-middleware": "^2.2.0",
    "redux-router": "^2.1.2",
    "redux-thunk": "^2.2.0",
    "socket.io": "^2.0.4",
    "styled-components": "^3.1.5",
    "turndown": "^4.0.1",
    "url-search-params": "^0.10.0",
    "webpack": "^3.4.1"
  },
  "devDependencies": {
    "@babel/types": "^7.0.0-beta.36",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^22.1.0",
    "deep-assign": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-parallel": "^0.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.1.0",
    "pre-commit": "^1.2.2",
    "react-dev-utils": "^5.0.0",
    "react-test-renderer": "^16.0.0",
    "simple-git": "^1.80.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/templates/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|templates|node_modules)[/\\\\]"
    ]
  },
  "pre-commit": [
    "check"
  ]
}
